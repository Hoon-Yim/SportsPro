@model Customer
@{
    ViewData["Title"] = "Delete Customer";
}

<section id="delete">
    <div id="delete-page">
        <div class="delete-title">
            <h1>Delete Customer</h1>
            <h6>! Please check the information that you're trying to delete !</h6>
        </div>
        <div class="delete-table">
            <table style="width: 1700px;">
                <thead>
                    <tr>
                        <th width="20%">Name</th>
                        <th width="15%">Email</th>
                        <th width="25%">Address</th>
                        <th width="5%">City</th>
                        <th width="5%">Province</th>
                        <th width="15%">Country</th>
                        <th width="25%">Phone</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.FirstName @Model.LastName</td>
                        <td>@Model.Email</td>
                        <td>@Model.Address</td>
                        <td>@Model.City</td>
                        <td>@Model.Province</td>

                        <td>@ViewBag.Country.Name</td>

                        <td>@Model.Phone</td>
                    </tr>
                </tbody>
            </table>

            <div class="delete-form">
                <form asp-action="Delete" method="POST">
                    <input type="hidden" asp-for="CustomerId" />
                    <input type="hidden" asp-for="FirstName" value="@Model.FirstName" />
                    <input type="hidden" asp-for="LastName" value="@Model.LastName" />
                    <div class="delete-sec">
                        <h2>Are you sure?</h2>
                        <div class="delete-btn">
                            <button type="submit" class="delete-del">Delete</button>
                            <a asp-action="List">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>