@model Product
@{
    ViewData["Title"] = "Delete Product";
}

<section id="delete">
    <div id="delete-page">
        <div class="delete-title">
            <h1>Delete Product</h1>
            <h6>! Please check the information that you're trying to delete !</h6>
        </div>
        <div class="delete-table">
            <table>
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Release Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Code</td>
                        <td>@Model.Name</td>
                        <td>@Model.YearlyPrice</td>
                        <td>@Model.Date.ToString("MMMM dd, yyyy")</td>
                    </tr>
                </tbody>
            </table>

            <div class="delete-form">
                <form asp-action="Delete" method="POST">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" asp-for="Name" value="@Model.Name" />
                    <div class="delete-sec">
                        <h2>Are you sure?</h2>
                        <div class="delete-btn">
                            <button type="submit" class="delete-del">Delete</button>
                            <a asp-action="List">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>