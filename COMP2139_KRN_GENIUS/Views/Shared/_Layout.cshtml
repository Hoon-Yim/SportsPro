                        <li>
                            <a asp-area="" asp-controller="Technician" asp-action="List">Technicians</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Customer" asp-action="List">Customers</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Incident" asp-action="List">Incidents</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Registration" asp-action="Get">Registrations</a>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="About">About Us</a>
